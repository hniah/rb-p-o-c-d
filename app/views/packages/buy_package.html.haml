.buy_packages
  %h2 ALL PACKAGES
  %table.table.table-bordered.text-center
    %thead
      %tr
        %th
        %th.text-center Ad-hoc
        %th.text-center
          4 sessions
          %br
          ($28/hr)
        %th.text-center
          12 sessions
          %br
          ($18/hr)
        %th.text-center
          24 sessions
          %br
          ($16/hr)
    - Package::SESSION_TYPE_LIST.each do |session_type|
      %tr
        %th= "#{session_type}-hours sessions"
        - @packages[session_type].each do |package|
          - if package.price == 0
            %td= "-"
          - else
            %td
              = simple_form_for current_user, url: buy_package_path, method: :patch do |f|
                = f.input :package_id, as: :hidden, input_html: { value: package.id }
                = f.submit number_to_currency(package.price, precision: 0), class: 'btn', data: { test: package.id }





