.buy_packages
  %h2 ALL PACKAGES
  %table.table.table-bordered.text-center
    %thead
      %tr
        %th
        %th.text-center
          Ad-hoc
          %br
          ($28/hr)
        %th.text-center
          4 sessions
          %br
          ($20/hr)
        %th.text-center
          12 sessions
          %br
          ($18/hr)
        %th.text-center
          24 sessions
          %br
          ($16/hr)
    - @sessions_type_list.each do |session_type|
      %tr
        %th= "#{session_type}-hours sessions"
        - @packages[session_type].each do |package|
          %td!= show_buy_package_button(package, current_user)

