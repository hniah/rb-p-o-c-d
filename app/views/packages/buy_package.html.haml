#packages-buy-package-container
  .help-link
    = link_to image_tag("help/link.png", :border => 0, :alt => 'Tips on choosing the right package', :title => 'Tips on choosing the right package'), tips_buy_package_path, {target: "_blank"}
  = page_heading "OCD Packages"
  .content-box
    %table.table.table-bordered.text-center
      %thead
        %tr
          %th
          %th.text-center
            Ad-hoc
            %br
            ($28/hr)
          %th.text-center
            4 sessions
            %br
            ($20/hr)
          %th.text-center
            12 sessions
            %br
            ($18/hr)
          %th.text-center
            24 sessions
            %br
            ($16/hr)
      - @sessions_type_list.each do |session_type|
        %tr
          %th= "#{session_type}-hour session"
          - @packages[session_type].each do |package|
            %td!= show_buy_package_button(package, current_user)
    %div
      = "All sessions to be utilized within 12 months"
      %br
      %br
      %u
        = "Additional charges"
      %br
      = "Extended hour: $28/hr"
      %br
      = "Weekend charges: $10/hr"
