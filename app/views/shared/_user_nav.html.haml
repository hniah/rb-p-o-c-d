#shared-user-nav-container
  %ul.ul-nav
    - unless user_signed_in?
      %li{class: display_active_menu_item(new_user_registration_path)}
        = link_to 'Register', new_user_registration_path
    - if user_signed_in?
      %li{class: display_active_menu_item(user_info_path)}
        = link_to 'My Account', user_info_path
      %li= link_to 'Sign out', destroy_user_session_path, method: :delete
    - else
      %li{class: display_active_menu_item(new_user_session_path)}
        = link_to 'Sign in', new_user_session_path
