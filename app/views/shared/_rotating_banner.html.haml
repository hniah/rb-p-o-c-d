- if @sliders.present?
  .slider-wrapper-home.theme-default
    #rotating-banner.nivoSlider
      - @sliders.each do |slider|
        %img{:src => slider.image, title: slider.caption}

    #share-description
      %h2 Book trusted home cleaners
      .tip Pick a time and we'll get your place cleaned.
      .control
        = link_to 'Book a Timeslot', booking_path, class: 'btn active'
        = link_to 'Buy a Package & Save', buy_package_path, class: 'btn'
      .facebook-share
        .fb-like{"data-action" => "like", "data-href" => "https://www.facebook.com/ourcleaningdepartment", "data-layout" => "standard", "data-share" => "true", "data-show-faces" => "false"}
      %ul.desc-info
        %li Experienced, professional and reliable
        %li Singaporean and PR housekeepers
        %li Satisfaction guaranteed
        %li Flexible bookings
        %li Easy online booking system (Coming Soon!)

  :javascript
    $(document).ready(function(){
      $('#rotating-banner').nivoSlider({
        effect: 'random',               // Specify sets like: 'fold,fade,sliceDown'
        slices: 15,                     // For slice animations
        boxCols: 8,                     // For box animations
        boxRows: 4,                     // For box animations
        animSpeed: 500,                 // Slide transition speed
        pauseTime: 5000,                // How long each slide will show
        startSlide: 0,                  // Set starting Slide (0 index)
        directionNav: #{@sliders.count > 1 ? true : false},             // Next & Prev navigation
        controlNav: false,               // 1,2,3... navigation
        controlNavThumbs: false,        // Use thumbnails for Control Nav
        pauseOnHover: true,             // Stop animation while hovering
        manualAdvance: false,           // Force manual transitions
        prevText: 'Prev',               // Prev directionNav text
        nextText: 'Next',               // Next directionNav text
        randomStart: false,             // Start on a random slide
        beforeChange: function(){},     // Triggers before a slide transition
        afterChange: function(){},      // Triggers after a slide transition
        slideshowEnd: function(){},     // Triggers after all slides have been shown
        lastSlide: function(){},        // Triggers when last slide is shown
        afterLoad: function(){}         // Triggers when slider has loaded
      });
    });
