%h2 Sign up

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .name
    = f.label :name
    = f.text_field :name, autofocus: true

  .email
    = f.label :email
    = f.email_field :email

  .password
    = f.label :password
    = f.password_field :password, autocomplete: "off"

  .password-confirmation
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "off"

  .address
    = f.label :address
    = f.text_area :address

  .unit
    = f.label :unit
    = f.text_field :unit

  .postal
    = f.label :postal
    = f.text_field :postal

  .instruction
    = f.label :instruction, 'Special Instruction'
    = f.text_area :instruction

  %label{class:"checkbox"}
    = check_box_tag :terms_of_service, "1"
    %span I agree to the terms of service

  %label{class:"checkbox"}
    = check_box_tag :subscribe_to_mailing_list, "1"
    %span Please subscribe me to the exciting mailing list with lots of promotion!

  .submit= f.submit "Sign up"

= render "devise/shared/links"
