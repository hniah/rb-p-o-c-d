!!!
%html
  %head
    %title Our Cleaning Department
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body


    .main-nav-container
      %ul.main-nav
        %li{class: display_active_menu_item(time_slots_path)}= link_to 'Book a session', time_slots_path
        - unless user_signed_in?
          %li{class: display_active_menu_item(new_user_registration_path)}= link_to 'Register', new_user_registration_path
        - if user_signed_in?
          %li{class: display_active_menu_item(user_info_path)}= link_to 'My Account', user_info_path
          %li= link_to 'Sign out', destroy_user_session_path, method: :delete
        - else
          %li{class: display_active_menu_item(new_user_session_path)}= link_to 'Sign in', new_user_session_path
        %li{class: display_active_menu_item(buy_package_path)}= link_to 'Buy Packages', buy_package_path

    .main-body
      - if notice.present?
        %p.notice= notice
      - if alert.present?
        %p.warning= alert

      = yield

    .footer
      %ul.footer-nav
        %li{ class: display_active_menu_item(job_scope_and_time_to_task_path) }= link_to 'Job scope and Time to task', job_scope_and_time_to_task_path
        %li{ class: display_active_menu_item(terms_and_condition_path) }= link_to 'Terms and Condition', terms_and_condition_path
