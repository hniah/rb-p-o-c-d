  .right
    .form-container
      = form_tag(contact_forms_path, method: :post) do
        .name.form-group
          = label_tag "Name : "
          .input-group
            = text_field_tag(:name)

        .email.form-group
          = label_tag "Email : "
          .input-group
            = text_field_tag(:email)

        .contact.form-group
          = label_tag "Contact No. : "
          .input-group
            =text_field_tag(:contact)

        .message.form-group
          = label_tag "Message"
          .input-group
            = text_area_tag 'message',nil, rows: 3
        .form-group
          = submit_tag("Send" , class: "button-submit")
