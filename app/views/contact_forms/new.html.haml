.contact-form-container
  = page_heading "Contact Us"

  .left
    %br
    %p{:style => 'font-size:18px; font-weight: bold'}= "Our Cleaning Department LLP"
    %p{:style => 'font-size:10px' }= "(T14LL0310H)"
    %br
    %p= "We welcome any feedback or enquiries regarding our housekeeping services."
    %br
    %p="Simply fill up the contact form to leave us a message and we will get back to you at the soonest."
    %br
    %table.table-text-contact
      %tr{valign: 'top'}
        %td
          ="Call/Text :"
        %td
          ="81263759 or 81263795"
      %tr{valign: 'top'}
        %td
          ="Email :"
        %td
          ="enquiries@ourcleaningdepartment.com"
      %tr{valign: 'top'}
        %td
          ="Address : "
        %td
          ="Block 57 New Upper Changi Road"
          %br
          ="#01-1356"
          %br
          ="Singapore 461057"
          %br
          ="*Appointment is required. Thanks!"
  .right
    %br
    .form-container
      = form_tag(contact_forms_path, method: :post) do
        .name.form-group
          = label_tag "Name * "
          .input-group
            = text_field_tag(:name)

        .email.form-group
          = label_tag "Email * "
          .input-group
            = text_field_tag(:email)

        .contact.form-group
          = label_tag "Contact No. * "
          .input-group
            =text_field_tag(:contact)

        .message.form-group
          = label_tag "Message *"
          .input-group
            = text_area_tag 'message',nil, rows: 3
        .captcha.form-group
          = label_tag "Captcha *"
          .input-group
            = recaptcha_tags
        .form-group
          = submit_tag("Send" , class: "button-submit")
